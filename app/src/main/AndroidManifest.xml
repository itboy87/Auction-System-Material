<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suh.itboy.auctionsystem" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AccountActivity"
            android:label="@string/app_name"
            android:theme="@style/AccountTheme" >
        </activity>
        <activity
            android:name=".Activities.DashboardActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".Activities.ProductDetailActivity"
            android:label="@string/title_activity_product_detail" />

        <provider
            android:name=".Provider.ProductProvider"
            android:authorities="com.suh.auctionsystem.productprovider"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".Activities.AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName=".Activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.suh.itboy.auctionsystem.Activities.DashboardActivity" />
        </activity>
    </application>

</manifest>
